{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Android",
            "type": "reactnative",
            "request": "launch",
            "platform": "android",
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/android/app/build/intermediates/assets/debug/index.android.bundle",
            "port": 8081,
            "preLaunchTask": "react-native:start"
        },
        {
            "name": "Debug iOS",
            "type": "reactnative",
            "request": "launch",
            "platform": "ios",
            "sourceMaps": true,
            "outDir": "${workspaceFolder}/ios/build/Build/Products/Debug-iphonesimulator/${workspaceFolder}.app/index.ios.bundle",
            "port": 8081,
            "preLaunchTask": "react-native:start"
        }
    ]
}
